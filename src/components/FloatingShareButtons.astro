---
/**
 * Floating Share Buttons
 * Always-visible share buttons that follow user as they scroll
 * Viral mechanic: Constant reminder to share, zero friction
 */

interface Props {
  title?: string
  url?: string
  compact?: boolean
  position?: 'left' | 'right'
}

const { title = 'Check out Fusion Party', url, compact = false, position = 'left' } = Astro.props

// Get current page URL if not provided
const currentUrl = url || Astro.url.href
---

<div class={`floating-share ${position} ${compact ? 'compact' : ''}`} id="floating-share">
  <div class="share-label">Share</div>

  <!-- Twitter/X -->
  <a
    href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(currentUrl)}&hashtags=FusionParty,VicVotes2026`}
    target="_blank"
    rel="noopener noreferrer"
    class="share-btn twitter"
    aria-label="Share on Twitter"
    data-platform="twitter"
  >
    <svg viewBox="0 0 24 24" fill="currentColor">
      <path
        d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
      ></path>
    </svg>
  </a>

  <!-- Facebook -->
  <a
    href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(currentUrl)}`}
    target="_blank"
    rel="noopener noreferrer"
    class="share-btn facebook"
    aria-label="Share on Facebook"
    data-platform="facebook"
  >
    <svg viewBox="0 0 24 24" fill="currentColor">
      <path
        d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
      ></path>
    </svg>
  </a>

  <!-- LinkedIn -->
  <a
    href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}`}
    target="_blank"
    rel="noopener noreferrer"
    class="share-btn linkedin"
    aria-label="Share on LinkedIn"
    data-platform="linkedin"
  >
    <svg viewBox="0 0 24 24" fill="currentColor">
      <path
        d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
      ></path>
    </svg>
  </a>

  <!-- Copy Link -->
  <button class="share-btn copy" aria-label="Copy link" data-url={currentUrl} id="copy-link-btn">
    <svg viewBox="0 0 24 24" fill="currentColor">
      <path
        d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"
      ></path>
    </svg>
  </button>

  <!-- Share count (optional) -->
  <div class="share-count" id="share-count" style="display: none;">
    <span id="share-count-number">0</span>
    <span class="share-count-label">shares</span>
  </div>
</div>

<script>
  // Copy link functionality
  const copyBtn = document.getElementById('copy-link-btn')
  if (copyBtn) {
    copyBtn.addEventListener('click', async () => {
      const url = copyBtn.dataset.url || window.location.href

      try {
        await navigator.clipboard.writeText(url)

        // Visual feedback
        const svg = copyBtn.querySelector('svg')
        if (svg) {
          svg.innerHTML = `<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>`
        }

        setTimeout(() => {
          if (svg) {
            svg.innerHTML = `<path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/>`
          }
        }, 2000)

        // Track in analytics
        if (window.plausible) {
          window.plausible('Share', { props: { platform: 'copy-link' } })
        }
      } catch (err) {
        console.error('Failed to copy:', err)
      }
    })
  }

  // Track social shares
  document.querySelectorAll('.share-btn[data-platform]').forEach((btn) => {
    btn.addEventListener('click', () => {
      const platform = btn.getAttribute('data-platform')
      if (window.plausible && platform) {
        window.plausible('Share', { props: { platform } })
      }
    })
  })

  // Hide/show on scroll
  let lastScrollY = window.scrollY
  const floatingShare = document.getElementById('floating-share')

  window.addEventListener(
    'scroll',
    () => {
      const currentScrollY = window.scrollY

      if (floatingShare) {
        if (currentScrollY < 200) {
          // Hide at top of page
          floatingShare.style.opacity = '0'
          floatingShare.style.pointerEvents = 'none'
        } else if (currentScrollY < lastScrollY) {
          // Scrolling up - show
          floatingShare.style.opacity = '1'
          floatingShare.style.pointerEvents = 'auto'
        } else if (currentScrollY - lastScrollY > 100) {
          // Scrolling down fast - hide
          floatingShare.style.opacity = '0.3'
        }
      }

      lastScrollY = currentScrollY
    },
    { passive: true }
  )
</script>

<style>
  .floating-share {
    position: fixed;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1000;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1rem;
    background-color: #ffffff;
    border: 4px solid #000000;
    box-shadow: 6px 6px 0px 0px #000000;
    transition: all 0.3s ease;
  }

  .floating-share.left {
    left: 1rem;
  }

  .floating-share.right {
    right: 1rem;
  }

  .floating-share.compact {
    padding: 0.5rem;
    gap: 0.25rem;
  }

  .share-label {
    font-weight: 800;
    font-size: 0.75rem;
    text-transform: uppercase;
    text-align: center;
    color: #000000;
    letter-spacing: 0.05em;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #000000;
    margin-bottom: 0.5rem;
  }

  .compact .share-label {
    font-size: 0.625rem;
    padding-bottom: 0.25rem;
    margin-bottom: 0.25rem;
  }

  .share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background-color: #000000;
    color: #ffffff;
    border: 3px solid #000000;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
  }

  .compact .share-btn {
    width: 2.5rem;
    height: 2.5rem;
  }

  .share-btn svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  .compact .share-btn svg {
    width: 1rem;
    height: 1rem;
  }

  .share-btn:hover {
    transform: scale(1.1);
  }

  .share-btn.twitter:hover {
    background-color: #000000;
    border-color: #5effd8;
  }

  .share-btn.facebook:hover {
    background-color: #1877f2;
    border-color: #1877f2;
  }

  .share-btn.linkedin:hover {
    background-color: #0a66c2;
    border-color: #0a66c2;
  }

  .share-btn.copy:hover {
    background-color: #ffed00;
    color: #000000;
    border-color: #ffed00;
  }

  .share-count {
    text-align: center;
    padding-top: 0.5rem;
    border-top: 2px solid #000000;
    margin-top: 0.5rem;
  }

  .share-count-number {
    display: block;
    font-weight: 800;
    font-size: 1.5rem;
    color: #c926f2;
  }

  .share-count-label {
    display: block;
    font-size: 0.625rem;
    text-transform: uppercase;
    font-weight: 800;
    color: #666666;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .floating-share {
      left: auto !important;
      right: 0.5rem;
      top: auto;
      bottom: 1rem;
      transform: none;
      flex-direction: row;
      padding: 0.5rem;
      gap: 0.5rem;
    }

    .share-label {
      display: none;
    }

    .share-btn {
      width: 2.5rem;
      height: 2.5rem;
    }

    .share-count {
      display: none !important;
    }
  }

  /* Hide on print */
  @media print {
    .floating-share {
      display: none;
    }
  }
</style>
