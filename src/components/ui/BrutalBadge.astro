---
/**
 * BrutalBadge - Reusable Neo-Brutalist Badge/Tag Component
 *
 * Small labeled tags with brutal styling.
 * Used for categories, tags, labels, etc.
 *
 * @param {string} variant - Color variant: 'magenta' | 'mint' | 'yellow' | 'lavender' | 'black' | 'white'
 * @param {string} size - Badge size: 'sm' | 'md' | 'lg'
 * @param {string} icon - Optional MDI icon name
 * @param {string} class - Additional CSS classes
 */

import { Icon } from 'astro-icon/components'

interface Props {
  variant?: 'magenta' | 'mint' | 'yellow' | 'lavender' | 'black' | 'white'
  size?: 'sm' | 'md' | 'lg'
  icon?: string
  class?: string
}

const { variant = 'magenta', size = 'md', icon, class: className = '' } = Astro.props

// Variant styles
const variantStyles = {
  magenta: 'bg-magenta text-white',
  mint: 'bg-mint text-black',
  yellow: 'bg-yellow text-black',
  lavender: 'bg-lavender text-black',
  black: 'bg-black text-white',
  white: 'bg-white text-black',
}

// Size styles
const sizeStyles = {
  sm: 'px-2 py-1 text-xs border-2',
  md: 'px-3 py-1 text-sm border-3',
  lg: 'px-4 py-2 text-base border-4',
}

// Shadow sizes
const shadowSizes = {
  sm: '2px 2px 0px 0px #000',
  md: '3px 3px 0px 0px #000',
  lg: '4px 4px 0px 0px #000',
}

const iconSizes = {
  sm: 'w-3 h-3',
  md: 'w-4 h-4',
  lg: 'w-5 h-5',
}
---

<span
  class={`
    inline-flex items-center gap-1
    ${variantStyles[variant]}
    ${sizeStyles[size]}
    border-black
    font-black uppercase tracking-wider
    ${className}
  `}
  style={`
    box-shadow: ${shadowSizes[size]};
    font-family: 'Archivo Black', sans-serif;
  `}
>
  {icon && <Icon name={icon} class={iconSizes[size]} />}
  <slot />
</span>
