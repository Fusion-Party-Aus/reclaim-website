---
export const prerender = false
import BaseLayout from '../../layouts/BaseLayout.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
import Hero from '../../components/Hero.astro'
import { Icon } from 'astro-icon/components'
import { getDocumentBySlug, urlFor } from '../../lib/sanity'
import { renderPortableText } from '../../lib/portableText'
import type { PortableTextBlock } from '../../lib/portableText'
import '../../styles/global.css'

interface CommitmentDetail {
  detail: string
}

interface Commitment {
  icon: string
  title: string
  highlight: string
  details?: CommitmentDetail[]
}

interface HTVCandidate {
  candidateName: string
  candidateParty: string
  candidateTier: 'green' | 'orange' | 'red' | 'magenta'
  ballotOrder?: number
  suggestedVote?: number
}

interface Electorate {
  _id: string
  name: string
  slug: { current: string }
  subtitle?: string
  isArchived?: boolean
  electionGrouping?: string
  house?: 'lower' | 'upper'
  candidateName?: string
  candidateImage?: unknown
  candidateBio?: string
  commitments?: Commitment[]
  htv?: HTVCandidate[]
  body?: PortableTextBlock[]
}

const { slug } = Astro.params

if (!slug) {
  return Astro.redirect('/404')
}

const electorate = await getDocumentBySlug<Electorate>('electorate', slug)

if (!electorate) {
  return Astro.redirect('/404')
}

// HTV Sorting
const hasHTV = Array.isArray(electorate.htv) && electorate.htv.length > 0
const htvArray = electorate.htv || []
const sortedHTV = hasHTV
  ? [...htvArray].sort((a, b) => {
      if (a.ballotOrder && b.ballotOrder) return a.ballotOrder - b.ballotOrder
      if (a.ballotOrder) return -1
      if (b.ballotOrder) return 1
      return a.candidateName.localeCompare(b.candidateName)
    })
  : []

// Design-system-aligned tier colours — no generic Tailwind green/orange/red
const tierConfig: Record<
  'magenta' | 'green' | 'orange' | 'red',
  {
    border: string
    bg: string
    badgeBg: string
    badgeText: string
    label: string
  }
> = {
  magenta: {
    border: '#C926F2',
    bg: '#FAF0FF',
    badgeBg: '#C926F2',
    badgeText: '#fff',
    label: 'Vote 1',
  },
  green: {
    border: '#00B37A',
    bg: '#EDFFF7',
    badgeBg: '#00B37A',
    badgeText: '#fff',
    label: 'Vote High',
  },
  orange: {
    border: '#E07A00',
    bg: '#FFF8ED',
    badgeBg: '#E07A00',
    badgeText: '#fff',
    label: 'Middle',
  },
  red: {
    border: '#D32F2F',
    bg: '#FFF3F3',
    badgeBg: '#D32F2F',
    badgeText: '#fff',
    label: 'Vote Last',
  },
}
---

<BaseLayout title={`${electorate.name} | Future Party`}>
  <Header />

  <Hero
    title={electorate.name}
    subtitle={electorate.subtitle || 'Decades of neglect. A concrete plan to fix it.'}
  />

  <main class="bg-white pb-24">
    <div class="max-w-6xl mx-auto px-4 md:px-8 pt-10">
      {/* ── Breadcrumbs ── */}
      <nav
        class="flex items-center flex-wrap gap-1 mb-10 text-xs font-black uppercase tracking-widest"
      >
        <a
          href="/"
          class="px-3 py-1.5 border-2 border-black bg-yellow text-black hover:bg-mint transition-colors"
          >Home</a
        >
        <span class="text-black/30">›</span>
        <a
          href="/electorates"
          class="px-3 py-1.5 border-2 border-black bg-white text-black hover:bg-mint transition-colors"
          >Electorates</a
        >
        {
          electorate.isArchived && (
            <>
              <span class="text-black/30">›</span>
              <a
                href="/past-candidates"
                class="px-3 py-1.5 border-2 border-black bg-white text-magenta hover:bg-magenta hover:text-white transition-all"
              >
                Past Candidates
              </a>
            </>
          )
        }
        <span class="text-black/30">›</span>
        <span class="px-3 py-1.5 border-2 border-black bg-black text-white max-w-xs truncate"
          >{electorate.name}</span
        >
      </nav>

      {/* ── Candidate + body ── */}
      <section class="mb-16 grid grid-cols-1 md:grid-cols-[2fr_1.2fr] gap-8 items-start">
        {/* Body / what we're fighting for */}
        <article
          class="border-4 border-black bg-white p-8 relative overflow-hidden"
          style="box-shadow: 6px 6px 0 0 #5EFFD8;"
        >
          {/* Mint corner accent */}
          <div
            class="absolute top-0 left-0 w-20 h-20 bg-mint"
            style="clip-path: polygon(0 0, 100% 0, 0 100%);"
          >
          </div>
          <div class="relative z-10">
            <div
              class="inline-block bg-mint text-black px-3 py-1 text-xs font-black uppercase tracking-widest mb-4 border-2 border-black"
            >
              What We're Fighting For
            </div>
            <h2
              class="text-2xl md:text-3xl font-black uppercase mb-4 leading-tight"
              style="font-family: 'Archivo Black', sans-serif;"
            >
              Our Plan for {electorate.name}
            </h2>
            {
              electorate.body ? (
                <div
                  class="prose prose-lg max-w-none
                prose-headings:font-black prose-headings:uppercase
                prose-h2:border-l-8 prose-h2:border-magenta prose-h2:pl-4
                prose-a:text-magenta prose-a:font-black
                prose-strong:font-black"
                  set:html={renderPortableText(electorate.body)}
                />
              ) : (
                <p class="text-base font-bold text-gray-500">
                  This electorate has a candidate and commitments — full detail coming soon.
                </p>
              )
            }
          </div>
        </article>

        {/* Candidate sidebar */}
        <aside
          class="border-4 border-black bg-black text-white relative overflow-hidden"
          style="box-shadow: 6px 6px 0 0 #C926F2;"
        >
          {/* Yellow corner */}
          <div
            class="absolute bottom-0 right-0 w-20 h-20 bg-yellow"
            style="clip-path: polygon(100% 0, 100% 100%, 0 100%);"
          >
          </div>

          {
            electorate.candidateImage && (
              <div class="border-b-4 border-black overflow-hidden">
                <img
                  src={urlFor(electorate.candidateImage as Parameters<typeof urlFor>[0])
                    .width(600)
                    .height(600)
                    .fit('crop')
                    .url()}
                  alt={electorate.candidateName || 'Candidate'}
                  class="w-full h-auto grayscale hover:grayscale-0 transition-all duration-500"
                />
              </div>
            )
          }

          <div class="p-6 relative z-10">
            <div
              class="inline-block bg-magenta text-white px-3 py-1 text-xs font-black uppercase tracking-widest mb-4 border-2 border-white"
            >
              Candidate
            </div>

            {
              electorate.candidateName ? (
                <>
                  <h2
                    class="text-xl font-black uppercase leading-tight mb-2"
                    style="font-family: 'Archivo Black', sans-serif;"
                  >
                    {electorate.candidateName}
                  </h2>
                  {electorate.candidateBio && (
                    <p class="text-sm leading-relaxed text-white/75 border-l-4 border-mint pl-3">
                      {electorate.candidateBio}
                    </p>
                  )}
                </>
              ) : (
                <div>
                  <p class="text-base font-black uppercase text-white/60 mb-3">Candidate TBA</p>
                  <p class="text-sm text-white/50 leading-relaxed">
                    From {electorate.name}? Interested in running?{' '}
                    <a
                      href="mailto:preselection@fusionparty.org.au"
                      class="text-mint font-black underline hover:no-underline"
                    >
                      preselection@fusionparty.org.au
                    </a>
                  </p>
                </div>
              )
            }
          </div>
        </aside>
      </section>

      {/* ── How To Vote ── */}
      {
        hasHTV && (
          <section class="mb-16">
            {/* Section header */}
            <div class="mb-8">
              <div class="inline-block bg-black text-white px-3 py-1 text-xs font-black uppercase tracking-widest mb-3 border-2 border-black">
                How to Vote
              </div>
              <h2
                class="text-3xl md:text-4xl font-black uppercase text-black leading-tight"
                style="font-family: 'Archivo Black', sans-serif;"
              >
                <span class="text-magenta">Ballot</span> Guide
              </h2>
            </div>

            {/* Legend */}
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
              {(
                Object.entries(tierConfig) as [
                  keyof typeof tierConfig,
                  (typeof tierConfig)[keyof typeof tierConfig],
                ][]
              ).map(([tier, cfg]) => (
                <div
                  class="border-4 border-black p-4"
                  style={`background: ${cfg.bg}; box-shadow: 4px 4px 0 0 ${cfg.border};`}
                >
                  <div
                    class="inline-block px-2 py-0.5 text-xs font-black uppercase mb-2 border-2 border-black"
                    style={`background: ${cfg.badgeBg}; color: ${cfg.badgeText};`}
                  >
                    {cfg.label}
                  </div>
                  <p class="text-xs font-bold text-black/70 leading-snug">
                    {tier === 'magenta' && 'Your Fusion Party candidate. Number them 1.'}
                    {tier === 'green' && 'Close allies sharing core values.'}
                    {tier === 'orange' && 'Some overlap, but meaningful differences.'}
                    {tier === 'red' && 'Major clashes with our principles. Vote last.'}
                  </p>
                </div>
              ))}
            </div>

            {/* Ticket */}
            <div
              class="bg-white border-4 border-black p-6 md:p-8"
              style="box-shadow: 8px 8px 0 0 #000;"
            >
              <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
                <div>
                  <span
                    class="inline-block bg-black text-white px-4 py-2 font-black uppercase tracking-wider text-sm"
                    style="font-family: 'Archivo Black', sans-serif;"
                  >
                    Ballot Paper — {electorate.name}
                  </span>
                  <p class="mt-2 font-black uppercase text-xs text-magenta">
                    Number every box on your ballot paper.
                  </p>
                </div>

                {sortedHTV.some((c) => c.suggestedVote) && (
                  <label
                    class="flex items-center gap-3 cursor-pointer border-4 border-black bg-white px-4 py-2 hover:bg-yellow transition-colors"
                    style="box-shadow: 3px 3px 0 0 #000;"
                  >
                    <span class="font-black uppercase text-xs">Show Preferences</span>
                    <div class="relative">
                      <input type="checkbox" id="toggle-preferences" class="sr-only" />
                      <div class="block bg-white w-10 h-5 border-2 border-black htv-toggle-bg transition-colors" />
                      <div class="dot absolute left-0.5 top-0.5 bg-magenta w-4 h-4 transition-transform border-2 border-black htv-toggle-dot" />
                    </div>
                  </label>
                )}
              </div>

              {electorate.house === 'upper' ? (
                <div class="flex flex-wrap gap-4 justify-center">
                  {sortedHTV.map((candidate) => {
                    const cfg = tierConfig[candidate.candidateTier]
                    return (
                      <div
                        class="flex-none w-36 md:w-44 flex flex-col items-center gap-3 p-4 border-4 border-black text-center hover:-translate-y-0.5 transition-transform"
                        style={`background: ${cfg.bg}; box-shadow: 4px 4px 0 0 ${cfg.border};`}
                      >
                        <div
                          class="w-14 h-14 border-4 border-black bg-white flex items-center justify-center font-black text-2xl"
                          style="box-shadow: inset 2px 2px 0 0 rgba(0,0,0,0.1);"
                        >
                          {candidate.candidateTier === 'magenta' ? (
                            '1'
                          ) : (
                            <span class="suggested-vote hidden text-lg">
                              {candidate.suggestedVote || ''}
                            </span>
                          )}
                        </div>
                        <div class="h-1 w-full bg-black" />
                        <p
                          class={`font-black text-sm uppercase leading-tight ${candidate.candidateTier === 'red' ? 'line-through opacity-50' : ''}`}
                        >
                          {candidate.candidateParty}
                        </p>
                        <span
                          class="px-2 py-0.5 text-xs font-black uppercase border-2 border-black"
                          style={`background: ${cfg.badgeBg}; color: ${cfg.badgeText};`}
                        >
                          {cfg.label}
                        </span>
                      </div>
                    )
                  })}
                </div>
              ) : (
                <div class="space-y-3 max-w-2xl mx-auto">
                  {sortedHTV.map((candidate) => {
                    const cfg = tierConfig[candidate.candidateTier]
                    return (
                      <div
                        class="flex items-center gap-4 p-4 border-4 border-black hover:-translate-x-0.5 transition-transform"
                        style={`background: ${cfg.bg}; box-shadow: 4px 4px 0 0 ${cfg.border};`}
                      >
                        <div
                          class="w-12 h-12 border-4 border-black bg-white flex items-center justify-center shrink-0 font-black text-xl"
                          style="box-shadow: inset 2px 2px 0 0 rgba(0,0,0,0.1);"
                        >
                          {candidate.candidateTier === 'magenta' ? (
                            '1'
                          ) : (
                            <span class="suggested-vote hidden">
                              {candidate.suggestedVote || ''}
                            </span>
                          )}
                        </div>
                        <div class="flex-1 min-w-0">
                          <p
                            class={`font-black text-base md:text-lg uppercase leading-tight ${candidate.candidateTier === 'red' ? 'line-through opacity-50' : ''}`}
                          >
                            {candidate.candidateName}
                          </p>
                          <p
                            class={`font-bold text-xs uppercase mt-0.5 ${candidate.candidateTier === 'red' ? 'line-through opacity-40' : 'opacity-70'}`}
                          >
                            {candidate.candidateParty}
                          </p>
                        </div>
                        <span
                          class="px-3 py-1 text-xs font-black uppercase shrink-0 border-2 border-black"
                          style={`background: ${cfg.badgeBg}; color: ${cfg.badgeText};`}
                        >
                          {cfg.label}
                        </span>
                      </div>
                    )
                  })}
                </div>
              )}
            </div>
          </section>
        )
      }

      {/* ── Commitments ── */}
      {
        Array.isArray(electorate.commitments) && electorate.commitments.length > 0 && (
          <section class="mb-16">
            <div class="mb-8">
              <div class="inline-block bg-magenta text-white px-3 py-1 text-xs font-black uppercase tracking-widest mb-3 border-2 border-black">
                Our Commitments
              </div>
              <h2
                class="text-3xl md:text-4xl font-black uppercase text-black leading-tight"
                style="font-family: 'Archivo Black', sans-serif;"
              >
                What We'll Do for
                <>
                  <br />
                  <span class="text-magenta">{electorate.name}</span>
                </>
              </h2>
            </div>

            <div class="grid gap-5 md:grid-cols-2">
              {electorate.commitments.map((commitment, index) => {
                const accents = ['#5EFFD8', '#FFED00', '#C926F2']
                const accent = accents[index % accents.length]
                return (
                  <article
                    class="border-4 border-black bg-white p-6 hover:-translate-y-0.5 transition-transform"
                    style={`box-shadow: 5px 5px 0 0 ${accent};`}
                  >
                    <div class="h-1.5 w-full mb-5" style={`background: ${accent};`} />
                    <div class="flex items-start gap-4 mb-3">
                      <span
                        class="text-3xl shrink-0 border-2 border-black p-2 bg-white"
                        role="img"
                        aria-label="commitment icon"
                      >
                        {commitment.icon}
                      </span>
                      <div>
                        <h3
                          class="text-lg font-black uppercase mb-1"
                          style="font-family: 'Archivo Black', sans-serif;"
                        >
                          {commitment.title}
                        </h3>
                        <p class="font-bold text-sm text-gray-700">{commitment.highlight}</p>
                      </div>
                    </div>
                    {commitment.details && commitment.details.length > 0 && (
                      <ul class="mt-3 space-y-1 border-t-2 border-black/10 pt-3">
                        {commitment.details.map((item) => (
                          <li class="flex items-start gap-2 text-sm text-gray-600 font-semibold">
                            <span class="font-black text-black shrink-0">→</span>
                            {item.detail}
                          </li>
                        ))}
                      </ul>
                    )}
                  </article>
                )
              })}
            </div>
          </section>
        )
      }

      {/* ── CTA ── */}
      <section
        class="bg-black text-white border-4 border-black relative overflow-hidden mt-4"
        style="box-shadow: 8px 8px 0 0 #5EFFD8;"
      >
        {/* Yellow corner */}
        <div
          class="absolute bottom-0 right-0 w-40 h-40 bg-yellow"
          style="clip-path: polygon(100% 0, 100% 100%, 0 100%);"
        >
        </div>
        <div class="px-8 py-12 relative z-10">
          <div
            class="inline-block bg-magenta text-white px-3 py-1 text-xs font-black uppercase tracking-widest mb-4 border-2 border-white"
          >
            Help Us Win
          </div>
          <h2
            class="text-3xl md:text-4xl font-black uppercase mb-3 leading-tight"
            style="font-family: 'Archivo Black', sans-serif;"
          >
            Help Us Win<br /><span class="text-mint">{electorate.name}</span>
          </h2>
          <p class="text-base font-black text-white/65 mb-8 border-l-4 border-yellow pl-4 max-w-lg">
            We don't take developer or corporate money. We win by people power — volunteers,
            conversations, and small donations.
          </p>
          <div class="flex flex-wrap gap-3">
            <a
              href="/get-involved"
              class="inline-flex items-center gap-2 px-5 py-3 font-black uppercase text-sm border-4 border-white bg-magenta text-white hover:-translate-y-0.5 transition-all"
              style="box-shadow: 3px 3px 0 0 #FFED00; font-family: 'Archivo Black', sans-serif;"
            >
              <Icon name="mdi:hand-wave" class="w-5 h-5" />
              Volunteer
            </a>
            <a
              href="/manifesto"
              class="inline-flex items-center gap-2 px-5 py-3 font-black uppercase text-sm border-4 border-white bg-transparent text-white hover:bg-white hover:text-black transition-all"
              style="font-family: 'Archivo Black', sans-serif;"
            >
              Read the Manifesto
            </a>
            <a
              href="/policies"
              class="inline-flex items-center gap-2 px-5 py-3 font-black uppercase text-sm border-4 border-white bg-transparent text-white hover:bg-white hover:text-black transition-all"
              style="font-family: 'Archivo Black', sans-serif;"
            >
              All Policies
            </a>
          </div>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</BaseLayout>

<script>
  const toggle = document.getElementById('toggle-preferences') as HTMLInputElement | null
  const votes = document.querySelectorAll('.suggested-vote')
  const bg = document.querySelector('.htv-toggle-bg')
  const dot = document.querySelector('.htv-toggle-dot')

  if (toggle) {
    toggle.addEventListener('change', (e) => {
      const isChecked = (e.target as HTMLInputElement).checked

      votes.forEach((v) => {
        if (isChecked) {
          v.classList.remove('hidden')
        } else {
          v.classList.add('hidden')
        }
      })

      if (bg && dot) {
        if (isChecked) {
          bg.classList.replace('bg-white', 'bg-magenta')
          dot.classList.replace('bg-magenta', 'bg-white')
          dot.classList.add('translate-x-5')
        } else {
          bg.classList.replace('bg-magenta', 'bg-white')
          dot.classList.replace('bg-white', 'bg-magenta')
          dot.classList.remove('translate-x-5')
        }
      }
    })
  }
</script>
