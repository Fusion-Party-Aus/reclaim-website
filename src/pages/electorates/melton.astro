    highlight: 'No more development approvals without infrastructure commitments.',
    details: [
      'Public transport access (existing or funded within 3 years)',
      'School capacity (existing or funded)',
      'Healthcare access (GP clinics, hospital access)',
      'Parks and public space (15% of development area)'
    ]
  }
