import Footer from '../../components/Footer.astro';
import '../../styles/global.css';

const commitments = [
  {
    icon: 'üöÜ',
    title: 'Melton Line Electrification by 2029',
    highlight: 'Not "planned." Not "funded." BUILT.',
    timeline: [
      'Begin procurement: 2027',
      'Construction starts: 2027',
      'Complete: 2029',
      'Cost: $2 billion (funded from infrastructure waste savings)'
    ],
    outcomes: [
      'Metro-standard frequency (every 10 minutes peak, 20 minutes off-peak)',
      'Faster, cleaner, more reliable trains',
      'No more diesel maintenance delays',
      'Integrated with metropolitan network'
    ]
  },
  {
    icon: 'üèòÔ∏è',
    title: '5,000 Public Homes in Growth Corridor',
    details: [
      'Part of statewide 50,000 homes program',
      'Melton allocation: 5,000 homes over 4 years',
      'Mix of apartments, townhouses, houses',
      'Within 800m of transport and services',
      '7+ star energy rating (lower bills for tenants)'
    ],
    cost: '$2.5B (funded through bond issue backed by rent + land tax increase on $1M+ properties)'
  },
  {
    icon: 'üè•',
    title: 'Melton Hospital',
    details: [
      'Capacity: 400 beds',
      'Services: Emergency, maternity, surgery, outpatient',
      'Location: Central Melton (site TBD with community input)',
      'Timeline: Begin 2027, open 2030',
      'Cost: $1B capital'
    ],
    note: 'Stop forcing Melton residents to travel to Sunshine or Footscray for emergency care.'
  },
  {
