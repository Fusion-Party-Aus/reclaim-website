---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { Icon } from 'astro-icon/components'
import '../styles/global.css'

const maintenanceMessages = [
  'BRB, fixing democracy',
  "We're making things better (unlike some governments we could mention)",
  'Upgrading our systems so we can upgrade yours',
  'Currently under construction... like our policy platform!',
  'Maintenance mode: Because we actually care about quality',
  'Taking a quick tech break to serve you better',
]

const randomMessage = maintenanceMessages[Math.floor(Math.random() * maintenanceMessages.length)]
---

<BaseLayout
  title="503 - Maintenance | Fusion Victoria"
  description="We're currently performing maintenance. We'll be back soon!"
>
  <Header />

  <main
    class="min-h-screen bg-gradient-to-br from-yellow-400 via-orange-400 to-yellow-400 relative overflow-hidden pt-28 pb-20"
  >
    <!-- Construction elements floating around -->
    <div class="absolute inset-0 opacity-20">
      {
        [...Array(6)].map((_, i) => (
          <div
            class="absolute text-7xl"
            style={`
            top: ${Math.random() * 80 + 10}%;
            left: ${Math.random() * 90}%;
            animation: float ${4 + i}s ease-in-out infinite ${i * 0.5}s, spin ${15 + i * 3}s linear infinite;
          `}
          >
            {['üîß', 'üî®', '‚öôÔ∏è', 'üõ†Ô∏è', '‚ö°', 'üèóÔ∏è'][i]}
          </div>
        ))
      }
    </div>

    <div class="max-w-6xl mx-auto px-4 relative z-10">
      <!-- Construction Icon -->
      <div class="text-center mb-12">
        <div class="inline-block relative mb-8">
          <div class="absolute inset-0 bg-orange-500 blur-3xl opacity-60"></div>
          <div
            class="relative w-48 h-48 mx-auto bg-black border-8 border-orange-600 flex items-center justify-center"
            style="box-shadow: 0 0 0 8px #000, 0 0 0 16px #fbbf24, 0 0 60px #fb923c; animation: bounce 2s ease-in-out infinite;"
          >
            <Icon
              name="mdi:construction"
              class="w-32 h-32 text-yellow-400"
              style="animation: wiggle 3s ease-in-out infinite;"
            />
          </div>

          <!-- Hard hat on top -->
          <div
            class="absolute -top-12 left-1/2 -translate-x-1/2 text-8xl"
            style="animation: bounce 1.5s ease-in-out infinite;"
          >
            ‚õëÔ∏è
          </div>
        </div>

        <h1
          class="text-5xl md:text-7xl font-black uppercase mb-6 text-black"
          style="font-family: 'Anton', 'Archivo Black', sans-serif; text-shadow: 4px 4px 0px rgba(255,255,255,0.8), 8px 8px 0px rgba(0,0,0,0.3);"
        >
          UNDER MAINTENANCE
        </h1>

        <p
          class="text-2xl md:text-3xl font-bold text-black"
          style="font-family: 'Space Grotesk', sans-serif;"
        >
          {randomMessage}
        </p>
      </div>

      <!-- Status Card -->
      <div class="max-w-3xl mx-auto mb-12">
        <div
          class="bg-black border-8 border-black p-8 md:p-12 transform rotate-1"
          style="box-shadow: 12px 12px 0px 0px rgba(251, 146, 60, 1), 24px 24px 0px 0px rgba(251, 191, 36, 1); border-width: 8px;"
        >
          <div class="flex items-center gap-4 mb-8">
            <div class="relative">
              <div
                class="w-20 h-20 bg-yellow-400 border-5 border-white flex items-center justify-center rotate-12"
                style="animation: pulse 2s ease-in-out infinite;"
              >
                <Icon name="mdi:hammer-wrench" class="w-12 h-12 text-black" />
              </div>
              <div
                class="absolute -bottom-2 -right-2 bg-orange-500 border-3 border-white px-2 py-1 text-xs font-black text-white uppercase"
              >
                Active
              </div>
            </div>
            <div class="flex-1">
              <h2
                class="text-2xl font-black uppercase text-yellow-400 mb-2"
                style="font-family: 'Archivo Black', sans-serif;"
              >
                System Upgrade In Progress
              </h2>
              <p class="text-white font-bold">We're improving our platform to serve you better</p>
            </div>
          </div>

          <!-- Fake Progress Bars -->
          <div class="space-y-4">
            <div>
              <div class="flex justify-between items-center mb-2">
                <span class="text-mint font-black text-sm uppercase">Database Optimization</span>
                <span class="text-yellow-400 font-black text-sm">87%</span>
              </div>
              <div class="h-4 bg-gray-800 border-3 border-mint overflow-hidden">
                <div
                  class="h-full bg-mint border-r-3 border-black"
                  style="width: 87%; animation: pulse 1s ease-in-out infinite;"
                >
                </div>
              </div>
            </div>

            <div>
              <div class="flex justify-between items-center mb-2">
                <span class="text-yellow-400 font-black text-sm uppercase">Server Updates</span>
                <span class="text-yellow-400 font-black text-sm">63%</span>
              </div>
              <div class="h-4 bg-gray-800 border-3 border-yellow-400 overflow-hidden">
                <div
                  class="h-full bg-yellow-400 border-r-3 border-black"
                  style="width: 63%; animation: pulse 1s ease-in-out infinite 0.2s;"
                >
                </div>
              </div>
            </div>

            <div>
              <div class="flex justify-between items-center mb-2">
                <span class="text-orange-400 font-black text-sm uppercase">Testing Changes</span>
                <span class="text-yellow-400 font-black text-sm">94%</span>
              </div>
              <div class="h-4 bg-gray-800 border-3 border-orange-400 overflow-hidden">
                <div
                  class="h-full bg-orange-400 border-r-3 border-black"
                  style="width: 94%; animation: pulse 1s ease-in-out infinite 0.4s;"
                >
                </div>
              </div>
            </div>
          </div>

          <div class="mt-8 pt-6 border-t-4 border-orange-500">
            <div class="flex items-center justify-between">
              <p class="text-sm font-bold text-gray-400 uppercase">Estimated time:</p>
              <p
                class="text-xl font-black text-yellow-400 uppercase"
                style="font-family: 'Archivo Black', sans-serif;"
              >
                Coming Soon‚Ñ¢
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- What's Being Improved -->
      <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto mb-12">
        <div class="bg-white border-6 border-black p-6" style="box-shadow: 6px 6px 0px 0px #000;">
          <div
            class="w-16 h-16 bg-orange-500 border-4 border-black flex items-center justify-center mb-4 mx-auto rotate-12"
          >
            <Icon name="mdi:speedometer" class="w-10 h-10 text-white" />
          </div>
          <h3
            class="text-xl font-black uppercase text-center mb-3"
            style="font-family: 'Archivo Black', sans-serif;"
          >
            Performance
          </h3>
          <p class="text-sm font-bold text-gray-700 text-center">
            Making everything faster and smoother
          </p>
        </div>

        <div class="bg-white border-6 border-black p-6" style="box-shadow: 6px 6px 0px 0px #000;">
          <div
            class="w-16 h-16 bg-yellow-400 border-4 border-black flex items-center justify-center mb-4 mx-auto -rotate-12"
          >
            <Icon name="mdi:shield-check" class="w-10 h-10 text-black" />
          </div>
          <h3
            class="text-xl font-black uppercase text-center mb-3"
            style="font-family: 'Archivo Black', sans-serif;"
          >
            Security
          </h3>
          <p class="text-sm font-bold text-gray-700 text-center">
            Enhancing protection for your data
          </p>
        </div>

        <div class="bg-white border-6 border-black p-6" style="box-shadow: 6px 6px 0px 0px #000;">
          <div
            class="w-16 h-16 bg-orange-500 border-4 border-black flex items-center justify-center mb-4 mx-auto rotate-6"
          >
            <Icon name="mdi:star-four-points" class="w-10 h-10 text-white" />
          </div>
          <h3
            class="text-xl font-black uppercase text-center mb-3"
            style="font-family: 'Archivo Black', sans-serif;"
          >
            Features
          </h3>
          <p class="text-sm font-bold text-gray-700 text-center">Adding cool new functionality</p>
        </div>
      </div>

      <!-- Stay Updated -->
      <div class="max-w-2xl mx-auto">
        <div
          class="bg-black border-8 border-orange-500 p-8 transform -rotate-1"
          style="box-shadow: 10px 10px 0px 0px #fbbf24;"
        >
          <div class="flex items-center gap-4 mb-6">
            <div
              class="w-16 h-16 bg-yellow-400 border-4 border-white flex items-center justify-center -rotate-12"
              style="animation: wiggle 2s ease-in-out infinite;"
            >
              <Icon name="mdi:bell-ring" class="w-10 h-10 text-black" />
            </div>
            <h3
              class="text-2xl font-black uppercase text-yellow-400"
              style="font-family: 'Archivo Black', sans-serif;"
            >
              We'll Be Back Soon!
            </h3>
          </div>
          <p class="text-lg font-bold text-white mb-6">
            Follow our social media for real-time updates on when we're back online:
          </p>
          <div class="flex flex-wrap gap-3">
            <a
              href="https://twitter.com/fusionparty"
              target="_blank"
              class="px-6 py-3 bg-white text-black border-4 border-white font-black uppercase hover:bg-yellow-400 transition-all"
            >
              <Icon name="mdi:twitter" class="w-5 h-5 inline mr-2" />
              Twitter
            </a>
            <a
              href="https://facebook.com/fusionparty"
              target="_blank"
              class="px-6 py-3 bg-white text-black border-4 border-white font-black uppercase hover:bg-yellow-400 transition-all"
            >
              <Icon name="mdi:facebook" class="w-5 h-5 inline mr-2" />
              Facebook
            </a>
            <button
              onclick="window.location.reload()"
              class="px-6 py-3 bg-yellow-400 text-black border-4 border-white font-black uppercase hover:bg-orange-500 hover:text-white transition-all"
            >
              <Icon name="mdi:refresh" class="w-5 h-5 inline mr-2" />
              Try Now
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  @keyframes wiggle {
    0%,
    100% {
      transform: rotate(-10deg);
    }
    50% {
      transform: rotate(10deg);
    }
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.03);
    }
  }
</style>
