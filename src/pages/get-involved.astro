    linkText: 'Costings: fusionparty.org.au/costings'
  }
];

const volunteerRoles = [
  {
    title: 'Field Campaign',
    roles: [
      { name: 'Door knocking', desc: 'High impact, reach voters directly' },
      { name: 'Phone banking', desc: 'Reach voters at scale' },
      { name: 'Letter boxing', desc: 'Physical presence in community' },
      { name: 'Market stalls', desc: 'Community engagement' }
    ]
  },
  {
    title: 'Digital Campaign',
    roles: [
      { name: 'Social media management' },
      { name: 'Graphic design' },
      { name: 'Video production' },
      { name: 'Website development' },
      { name: 'Data analysis' }
    ]
  },
  {
    title: 'Policy & Research',
    roles: [
      { name: 'Policy development' },
      { name: 'Costing verification' },
