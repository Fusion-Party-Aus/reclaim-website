---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { Icon } from 'astro-icon/components'
import '../styles/global.css'
---

<BaseLayout
  title="Design System | Fusion Party"
  description="The neo-brutalist design system for the Future Party brand ‚Äî colours, typography, components, and patterns."
>
  <Header />

  <!-- Alert bar -->
  <div class="alert-bar border-y-4 border-black">
    üìê Design System | <a href="#colours">Browse Components</a>
  </div>

  <!-- ‚ïê‚ïê‚ïê HERO ‚ïê‚ïê‚ïê -->
  <section
    class="relative bg-black text-white overflow-hidden border-b-8 border-mint"
    style="padding-top: calc(5rem + 6px); padding-bottom: 4rem;"
  >
    {/* Triple stripe */}
    <div class="absolute top-0 left-0 w-full h-3 bg-magenta z-20"></div>
    <div class="absolute top-3 left-0 w-full h-2 bg-mint z-20"></div>
    <div class="absolute top-5 left-0 w-full h-1 bg-yellow z-20"></div>
    {/* Geometric accents */}
    <div
      class="absolute bottom-0 right-0 w-56 h-56 bg-yellow hidden md:block"
      style="clip-path: polygon(100% 0, 100% 100%, 0 100%);"
    >
    </div>
    <div
      class="absolute top-20 right-20 w-24 h-24 border-8 border-mint hidden md:block"
      style="transform: rotate(18deg);"
    >
    </div>
    {/* Ghost watermark */}
    <div
      class="absolute inset-0 flex items-center justify-center pointer-events-none overflow-hidden"
    >
      <span
        class="text-[20rem] font-black uppercase leading-none text-white select-none"
        style="font-family: 'Anton', sans-serif; opacity: 0.03; transform: rotate(-5deg);">DS</span
      >
    </div>

    <div class="max-w-7xl mx-auto px-4 md:px-8 relative z-10">
      <div
        class="inline-block bg-mint text-black px-4 py-1 text-xs font-black uppercase tracking-widest mb-4 border-2 border-black"
        style="box-shadow: 3px 3px 0px 0px #000;"
      >
        INTERNAL
      </div>
      <h1
        class="text-5xl md:text-8xl font-black uppercase leading-[0.9] mb-6"
        style="font-family: 'Archivo Black', sans-serif; letter-spacing: 0.01em;"
      >
        Design<br /><span class="text-magenta">System</span>
      </h1>
      <p class="text-lg font-black uppercase border-l-8 border-yellow pl-4 text-yellow max-w-lg">
        Neo-brutal brand architecture ‚Äî colours, type, shadows, components, and patterns.
      </p>
    </div>
  </section>

  <!-- ‚ïê‚ïê‚ïê QUICK NAV ‚ïê‚ïê‚ïê -->
  <nav class="bg-white border-b-4 border-black sticky top-[67px] z-40 px-4 md:px-8 overflow-x-auto">
    <div class="max-w-7xl mx-auto flex items-center gap-0">
      {
        [
          { href: '#principles', label: 'Principles' },
          { href: '#colours', label: 'Colours' },
          { href: '#colour-rules', label: 'Colour Rules' },
          { href: '#typography', label: 'Typography' },
          { href: '#shadows', label: 'Shadows' },
          { href: '#components', label: 'Components' },
          { href: '#patterns', label: 'Patterns' },
          { href: '#dark-mode', label: 'Dark Mode' },
        ].map((item) => (
          <a
            href={item.href}
            class="px-5 py-3 font-black uppercase text-xs tracking-widest text-black border-r-2 border-black hover:bg-magenta hover:text-white transition-colors whitespace-nowrap"
          >
            {item.label}
          </a>
        ))
      }
    </div>
  </nav>

  <!-- ‚ïê‚ïê‚ïê SECTION 1: PRINCIPLES ‚Äî white bg ‚ïê‚ïê‚ïê -->
  <section id="principles" class="bg-white py-20 px-4 md:px-8 border-b-8 border-black">
    <div class="max-w-7xl mx-auto">
      <div class="mb-12">
        <div
          class="inline-block bg-magenta text-white px-3 py-1 text-xs font-black uppercase tracking-widest mb-3 border-2 border-black"
        >
          01
        </div>
        <h2
          class="text-4xl md:text-6xl font-black uppercase text-black leading-[0.9]"
          style="font-family: 'Archivo Black', sans-serif;"
        >
          Brand Principles
        </h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          [
            {
              label: 'Bold & Unapologetic',
              bg: '#5EFFD8',
              text: '#000',
              accent: '#C926F2',
              body: 'Maximum contrast, aggressive shadows, typography that screams for attention.',
            },
            {
              label: 'Clear & Direct',
              bg: '#C926F2',
              text: '#fff',
              accent: '#FFED00',
              body: 'No political BS. Geometric clarity and straightforward messaging.',
            },
            {
              label: 'Modern & Aggressive',
              bg: '#FFED00',
              text: '#000',
              accent: '#000',
              body: 'Forward-looking design that breaks conventions. Asymmetry and controlled chaos.',
            },
          ].map((p) => (
            <div
              class="border-4 border-black p-8"
              style={`background: ${p.bg}; color: ${p.text}; box-shadow: 6px 6px 0px 0px ${p.accent};`}
            >
              <div class="w-full h-2 mb-6" style={`background: ${p.accent};`} />
              <h3
                class="text-2xl font-black uppercase mb-3"
                style={`font-family: 'Archivo Black', sans-serif; color: ${p.text};`}
              >
                {p.label}
              </h3>
              <p
                class="font-bold text-sm leading-relaxed"
                style={`color: ${p.text}; opacity: 0.85;`}
              >
                {p.body}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- ‚ïê‚ïê‚ïê SECTION 2: COLOURS ‚Äî mint bg ‚ïê‚ïê‚ïê -->
  <section
    id="colours"
    class="py-20 px-4 md:px-8 border-b-8 border-black"
    style="background: #5EFFD8;"
  >
    <div class="max-w-7xl mx-auto">
      <div class="mb-12">
        <div
          class="inline-block bg-black text-mint px-3 py-1 text-xs font-black uppercase tracking-widest mb-3 border-2 border-black"
        >
          02
        </div>
        <h2
          class="text-4xl md:text-6xl font-black uppercase text-black leading-[0.9]"
          style="font-family: 'Archivo Black', sans-serif;"
        >
          Colour System
        </h2>
        <p class="mt-3 text-base font-black border-l-8 border-black pl-4 text-black/70 max-w-lg">
          High-contrast palette. Every colour has a deliberate role ‚Äî none are decorative accidents.
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4">
        {
          [
            { name: 'Magenta', hex: '#C926F2', css: '--magenta', rgb: '201, 38, 242', dark: false },
            { name: 'Mint', hex: '#5EFFD8', css: '--mint', rgb: '94, 255, 216', dark: true },
            { name: 'Yellow', hex: '#FFED00', css: '--yellow', rgb: '255, 237, 0', dark: true },
            {
              name: 'Lavender',
              hex: '#9A94E7',
              css: '--lavender',
              rgb: '154, 148, 231',
              dark: false,
            },
            { name: 'Black', hex: '#010102', css: '--black', rgb: '1, 1, 2', dark: false },
          ].map((c) => (
            <div class="border-4 border-black bg-white" style="box-shadow: 4px 4px 0px 0px #000;">
              <div
                class="h-32 border-b-4 border-black flex items-end p-3"
                style={`background: ${c.hex};`}
              >
                <span class="font-black text-2xl" style={`color: ${c.dark ? '#000' : '#fff'};`}>
                  Aa
                </span>
              </div>
              <div class="p-4">
                <div class="font-black text-sm uppercase mb-1">{c.name}</div>
                <div class="font-mono text-xs text-gray-500 mb-2">{c.hex}</div>
                <div class="font-mono text-xs text-gray-400 mb-3">{c.rgb}</div>
                <code class="text-xs bg-black text-mint px-2 py-0.5 font-mono">{c.css}</code>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- ‚ïê‚ïê‚ïê SECTION 2b: COLOUR DECISION RULES ‚Äî white bg ‚ïê‚ïê‚ïê -->
  <section id="colour-rules" class="py-20 px-4 md:px-8 border-b-8 border-black bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="mb-12">
        <div
          class="inline-block bg-black text-white px-3 py-1 text-xs font-black uppercase tracking-widest mb-3 border-2 border-black"
        >
          02b
        </div>
        <h2
          class="text-4xl md:text-6xl font-black uppercase text-black leading-[0.9]"
          style="font-family: 'Archivo Black', sans-serif;"
        >
          Colour Decision Rules
        </h2>
        <p class="mt-3 text-base font-black border-l-8 border-magenta pl-4 text-black/70 max-w-xl">
          When do you use magenta vs mint vs yellow? These rules have one answer for every
          situation. Ambiguity causes drift.
        </p>
      </div>

      <!-- Decision table -->
      <div class="border-4 border-black mb-6" style="box-shadow: 8px 8px 0px 0px #C926F2;">
        <div class="bg-black text-white px-6 py-3 font-black text-xs uppercase tracking-widest">
          CTA HIERARCHY
        </div>
        <div class="divide-y-4 divide-black">
          {
            [
              {
                situation: 'Primary CTA',
                examples: 'Join, Volunteer, Donate',
                colour: '#C926F2',
                textCol: '#fff',
                name: 'Magenta',
                why: 'Primary Fusion brand colour. Highest-attention action gets highest-attention colour.',
              },
              {
                situation: 'Secondary CTA',
                examples: 'Learn More, Read Policy, Share',
                colour: '#5EFFD8',
                textCol: '#000',
                name: 'Mint',
                why: 'Secondary brand colour. Signals "proceed" without competing with magenta.',
              },
              {
                situation: 'Warning / Alert / Financial',
                examples: 'Policy costs, deadlines, urgent notices',
                colour: '#FFED00',
                textCol: '#000',
                name: 'Yellow',
                why: 'Functional only. Reads as "pay attention" without alarm. No brand association.',
              },
            ].map((row) => (
              <div class="grid grid-cols-1 md:grid-cols-[200px_1fr_180px] gap-0 divide-y-4 md:divide-y-0 md:divide-x-4 divide-black">
                <div class="p-5 font-black uppercase text-sm flex flex-col justify-center gap-1">
                  <span>{row.situation}</span>
                  <span class="font-normal text-xs text-gray-500 normal-case">{row.examples}</span>
                </div>
                <div class="p-5 text-sm font-bold text-gray-700 flex items-center">{row.why}</div>
                <div
                  class="p-5 flex flex-col items-start justify-center gap-2"
                  style={`background: ${row.colour};`}
                >
                  <span class="font-black text-sm uppercase" style={`color: ${row.textCol};`}>
                    {row.name}
                  </span>
                  <code class="text-xs font-mono" style={`color: ${row.textCol}; opacity: 0.75;`}>
                    {row.colour}
                  </code>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Badge / label rules -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div class="border-4 border-black p-6" style="box-shadow: 6px 6px 0px 0px #5EFFD8;">
          <p class="font-black uppercase text-sm mb-4 border-l-4 border-mint pl-3">
            Category Badges
          </p>
          <div class="space-y-3">
            {
              [
                {
                  label: 'Default',
                  bg: '#5EFFD8',
                  text: '#000',
                  rule: 'Mint ‚Äî always the default badge colour',
                },
                {
                  label: 'Primary anchor',
                  bg: '#C926F2',
                  text: '#fff',
                  rule: 'Magenta ‚Äî only if the badge is the primary visual anchor of the card',
                },
                {
                  label: 'New / Urgent',
                  bg: '#FFED00',
                  text: '#000',
                  rule: 'Yellow ‚Äî time-sensitive status only, not decoration',
                },
              ].map((b) => (
                <div class="flex items-center gap-4">
                  <span
                    class="px-3 py-1 text-xs font-black uppercase border-2 border-black tracking-widest shrink-0"
                    style={`background: ${b.bg}; color: ${b.text}; box-shadow: 2px 2px 0 0 #000;`}
                  >
                    {b.label}
                  </span>
                  <span class="text-xs font-bold text-gray-600">{b.rule}</span>
                </div>
              ))
            }
          </div>
        </div>

        <div class="border-4 border-black p-6" style="box-shadow: 6px 6px 0px 0px #FFED00;">
          <p class="font-black uppercase text-sm mb-4 border-l-4 border-yellow pl-3">
            Hover States
          </p>
          <div
            class="bg-white border-4 border-black p-5 text-sm font-bold"
            style="box-shadow: 4px 4px 0 0 #000;"
          >
            Hover = <code class="font-mono text-magenta">translate(4px, 4px)</code> + reduced shadow.
            <br /><br />
            <strong class="font-black">Never</strong> introduce a new colour in a hover state that isn't
            already present on the page. Colour changes on hover should be minimal (border-bottom swap
            maximum).
          </div>
        </div>
      </div>

      <!-- Anti-rules -->
      <div
        class="bg-black text-white border-4 border-black p-8"
        style="box-shadow: 8px 8px 0px 0px #FFED00;"
      >
        <p class="font-black uppercase text-sm mb-5 text-yellow border-l-4 border-yellow pl-3">
          Yellow is NOT for
        </p>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {
            [
              'Hero section backgrounds',
              'Primary headlines',
              'Large background blocks (>300px tall)',
              'Formal / policy document framing',
            ].map((item) => (
              <div class="border-2 border-white/30 p-4 text-sm font-bold text-white/70">
                <span class="text-red-400 font-black mr-2">‚úï</span>
                {item}
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- ‚ïê‚ïê‚ïê SECTION 3: TYPOGRAPHY ‚Äî black bg ‚ïê‚ïê‚ïê -->
  <section id="typography" class="py-20 px-4 md:px-8 border-b-8 border-mint bg-black text-white">
    <div class="max-w-7xl mx-auto">
      <div class="mb-12">
        <div
          class="inline-block bg-mint text-black px-3 py-1 text-xs font-black uppercase tracking-widest mb-3 border-2 border-mint"
        >
          03
        </div>
        <h2
          class="text-4xl md:text-6xl font-black uppercase text-white leading-[0.9]"
          style="font-family: 'Archivo Black', sans-serif;"
        >
          Typography
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Archivo Black -->
        <div
          class="bg-white border-4 border-black text-black p-8"
          style="box-shadow: 6px 6px 0px 0px #5EFFD8;"
        >
          <div
            class="inline-block bg-mint text-black px-2 py-0.5 text-xs font-black uppercase mb-4 border border-black"
          >
            HEADINGS
          </div>
          <div
            class="text-5xl font-black uppercase mb-2"
            style="font-family: 'Archivo Black', sans-serif; letter-spacing: 0.01em;"
          >
            Archivo Black
          </div>
          <div class="text-sm font-bold text-gray-500 font-mono mb-6">
            font-family: 'Archivo Black', sans-serif<br />letter-spacing: 0.01em | line-height: 0.9
          </div>
          <div class="space-y-1 border-t-4 border-black pt-4">
            {
              [
                {
                  size: 'text-8xl',
                  label: 'Hero',
                  rem: '6rem',
                  px: '96px',
                  lh: '0.85',
                  use: 'Full-bleed hero display',
                },
                {
                  size: 'text-7xl',
                  label: 'Display 7xl',
                  rem: '4.5rem',
                  px: '72px',
                  lh: '0.9',
                  use: 'Page hero H1',
                },
                {
                  size: 'text-5xl',
                  label: 'Section 5xl',
                  rem: '3rem',
                  px: '48px',
                  lh: '1.0',
                  use: 'Section title H2',
                },
                {
                  size: 'text-3xl',
                  label: 'Card title 3xl',
                  rem: '1.875rem',
                  px: '30px',
                  lh: '1.1',
                  use: 'Card H3, feature heads',
                },
                {
                  size: 'text-2xl',
                  label: 'Subhead 2xl',
                  rem: '1.5rem',
                  px: '24px',
                  lh: '1.2',
                  use: 'H4, component subheads',
                },
                {
                  size: 'text-xl',
                  label: 'Lead xl',
                  rem: '1.25rem',
                  px: '20px',
                  lh: '1.5',
                  use: 'Lead paragraphs, large labels',
                },
              ].map((t) => (
                <div class="flex items-baseline gap-4 border-b border-black/10 pb-2">
                  <span
                    class={`${t.size} font-black uppercase leading-none shrink-0`}
                    style="font-family: 'Archivo Black', sans-serif;"
                  >
                    Aa
                  </span>
                  <div class="flex flex-col">
                    <span class="text-xs font-mono text-gray-500">
                      {t.label} ‚Äî {t.rem} / {t.px}
                    </span>
                    <span class="text-xs text-gray-400">{t.use}</span>
                  </div>
                </div>
              ))
            }
          </div>
          <!-- Body scale -->
          <div class="mt-6 border-t-4 border-black pt-4">
            <p class="text-xs font-black uppercase mb-3 tracking-widest text-gray-500">
              Body scale
            </p>
            <div class="space-y-2">
              {
                [
                  {
                    size: 'text-base',
                    label: 'Base',
                    rem: '1rem',
                    px: '16px',
                    use: 'All paragraph body copy ‚Äî never go smaller',
                  },
                  {
                    size: 'text-sm',
                    label: 'Small',
                    rem: '0.875rem',
                    px: '14px',
                    use: 'Metadata, captions, breadcrumbs',
                  },
                  {
                    size: 'text-xs',
                    label: 'Micro',
                    rem: '0.75rem',
                    px: '12px',
                    use: 'Badges, legal small print only',
                  },
                ].map((t) => (
                  <div class="flex items-baseline gap-3">
                    <span
                      class={`${t.size} font-bold shrink-0`}
                      style="font-family: 'Inter', sans-serif;"
                    >
                      Aa
                    </span>
                    <span class="text-xs font-mono text-gray-400">
                      {t.label} {t.rem} / {t.px} ‚Äî {t.use}
                    </span>
                  </div>
                ))
              }
            </div>
          </div>
        </div>

        <!-- Body / UI fonts -->
        <div class="flex flex-col gap-4">
          <div
            class="bg-white border-4 border-black text-black p-6 flex-1"
            style="box-shadow: 6px 6px 0px 0px #C926F2;"
          >
            <div
              class="inline-block bg-magenta text-white px-2 py-0.5 text-xs font-black uppercase mb-3 border border-black"
            >
              BODY
            </div>
            <div class="text-3xl font-black mb-1" style="font-family: 'Inter', sans-serif;">
              Inter
            </div>
            <p class="text-sm font-bold text-gray-600 font-mono mb-3">
              font-family: 'Inter', sans-serif
            </p>
            <p class="text-base leading-relaxed text-gray-700">
              The quick brown fox jumps over the lazy dog. Evidence-based policy for all Victorians.
            </p>
          </div>
          <div
            class="bg-white border-4 border-black text-black p-6 flex-1"
            style="box-shadow: 6px 6px 0px 0px #FFED00;"
          >
            <div
              class="inline-block bg-yellow text-black px-2 py-0.5 text-xs font-black uppercase mb-3 border border-black"
            >
              MONO / CODE
            </div>
            <div class="text-3xl font-black mb-1" style="font-family: 'Chakra Petch', monospace;">
              Chakra Petch
            </div>
            <p class="text-sm font-bold text-gray-600 font-mono mb-3">
              font-family: 'Chakra Petch', monospace
            </p>
            <code class="text-base font-mono text-gray-700">const policy = "evidence-based"</code>
          </div>
        </div>
      </div>

      <!-- Decorative watermark text note -->
      <div class="mt-6 bg-white/10 border-4 border-white/20 p-6 text-white">
        <div
          class="inline-block bg-yellow text-black px-2 py-0.5 text-xs font-black uppercase mb-3 border border-black"
        >
          WATERMARK / GHOST TEXT
        </div>
        <p class="font-black uppercase mb-2" style="font-family: 'Anton', sans-serif;">
          Anton ‚Äî decorative only
        </p>
        <p class="text-sm font-bold text-white/60 mb-4">
          Used at very large sizes (‚â•12rem) as ghost background watermarks. Opacity: 0.03‚Äì0.08.
          Rotation: -3¬∞ to -8¬∞. Never used for readable headings.
        </p>
        <div class="border-2 border-white/20 p-4">
          <p class="text-xs font-black uppercase text-yellow mb-2">When NOT to use</p>
          <ul class="text-xs font-bold text-white/50 space-y-1">
            {
              [
                'Section shorter than ~300px',
                'High typographic density ‚Äî it reads as clutter',
                'Non-white / non-black / non-magenta backgrounds',
                'Two adjacent sections ‚Äî only one side of a divider gets it',
                'Decorative use where the word has no relation to section content',
              ].map((rule) => <li>‚úï {rule}</li>)
            }
          </ul>
          <p class="text-xs font-bold text-white/40 mt-3 border-t border-white/10 pt-3">
            Default assumption: <strong class="text-white/60">no watermark</strong>. Add
            intentionally; never as filler.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ‚ïê‚ïê‚ïê SECTION 4: SHADOWS ‚Äî yellow bg ‚ïê‚ïê‚ïê -->
  <section id="shadows" class="py-20 px-4 md:px-8 border-b-8 border-black bg-yellow">
    <div class="max-w-7xl mx-auto">
      <div class="mb-12">
        <div
          class="inline-block bg-black text-yellow px-3 py-1 text-xs font-black uppercase tracking-widest mb-3 border-2 border-black"
        >
          04
        </div>
        <h2
          class="text-4xl md:text-6xl font-black uppercase text-black leading-[0.9]"
          style="font-family: 'Archivo Black', sans-serif;"
        >
          Shadows & Borders
        </h2>
        <p class="mt-3 text-base font-black border-l-8 border-black pl-4 text-black/70 max-w-lg">
          All shadows are hard-offset (no blur). Border-width is always 4px minimum.
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          [
            {
              label: 'Magenta Shadow',
              bg: '#fff',
              border: '#000',
              shadow: '6px 6px 0px 0px #C926F2',
              code: 'box-shadow: 6px 6px 0 0 #C926F2',
            },
            {
              label: 'Mint Shadow',
              bg: '#fff',
              border: '#000',
              shadow: '6px 6px 0px 0px #5EFFD8',
