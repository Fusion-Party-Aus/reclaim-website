---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import Hero from '../components/Hero.astro'
import Footer from '../components/Footer.astro'
import { getElectorates, getHomePage, urlFor } from '../lib/sanity'
import { Icon } from 'astro-icon/components'
import '../styles/global.css'

import MovementMetrics from '../components/ui/MovementMetrics.astro'
import DeveloperMessages from '../components/DeveloperMessages.astro'
import ScrollProgress from '../components/ScrollProgress.astro'
import MemberSignup from '../components/MemberSignup.astro'

const homePage = await getHomePage()

if (!homePage) {
  throw new Error('Home page not found in Sanity')
}

const electorates = await getElectorates()
const featuredPolicies: any[] = homePage.theftSection?.featuredPolicies || []

interface HomePage {
  title: string
  seo?: { metaTitle?: string; metaDescription?: string }
  hero: {
    eyebrow?: string
    title: string
    subtitle?: string
    showCTA?: boolean
    stats?: { number: string; label: string }[]
  }
  alertBar?: {
    enabled?: boolean
    text?: string
    linkText?: string
    linkUrl?: string
  }
  movementMetrics?: {
    label: string
    current: number
    goal: number
    icon: string
    color: 'magenta' | 'mint' | 'yellow'
    suffix?: string
    prefix?: string
  }[]
  signupCTA?: {
    heading?: string
    description?: string
    buttonText?: string
    footerText?: string
  }
  theftSection: { heading: string; description: string; cards: any[]; featuredPolicies?: any[] }
  electoratesSection: {
    heading: string
    description: string
    callToAction: { heading: string; description: string; buttonText: string; buttonLink: string }
  }
  manifestoSection: { heading: string; description: string; stats: any[] }
  joinSection: { heading: string; description: string; cards: any[] }
}

const hp = homePage as unknown as HomePage

const defaultMetrics = [
  { label: 'Registered Members', current: 847, goal: 1000, icon: 'ðŸ‘¥', color: 'magenta' as const },
  { label: 'Active Volunteers', current: 234, goal: 320, icon: 'ðŸ™‹', color: 'mint' as const },
  {
    label: 'Candidates Ready',
    current: 12,
    goal: 88,
    icon: 'ðŸ—³ï¸',
    color: 'yellow' as const,
    suffix: ' electorates',
  },
  {
    label: 'Monthly Donations',
    current: 4250,
    goal: 10000,
    icon: 'ðŸ’°',
    color: 'magenta' as const,
    prefix: '$',
  },
]
const movementMetrics = hp.movementMetrics || defaultMetrics

const policyItems = featuredPolicies.length > 0 ? featuredPolicies : hp.theftSection.cards || []
---

<BaseLayout title={hp.seo?.metaTitle || hp.title} description={hp.seo?.metaDescription || ''}>
  <Header />
  <DeveloperMessages />
  <ScrollProgress showMilestones={true} color="magenta" />

  <!-- ALERT BAR -->
  {
    hp.alertBar?.enabled !== false && (
      <div class="alert-bar border-y-4 border-black">
        <Icon name="mdi:ballot" class="inline-block w-5 h-5 -mt-1 mr-2" />
        {hp.alertBar?.text || "Contesting Victoria's 2026 State Election"} |{' '}
        <a href={hp.alertBar?.linkUrl || '#electorates'}>
          {hp.alertBar?.linkText || 'Find your electorate'}
        </a>
      </div>
    )
  }

  <!-- HERO -->
  <Hero
    eyebrow={hp.hero.eyebrow}
    title={hp.hero.title}
    subtitle={hp.hero.subtitle}
    stats={hp.hero.stats}
    showCTA={hp.hero.showCTA}
  />

  <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       SECTION 1: MOVEMENT METRICS â€” solid white, left-aligned header
       â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  <section class="bg-white border-b-8 border-black py-20 px-4 md:px-8 relative overflow-hidden">
    {/* Watermark */}
    <div class="absolute inset-0 flex items-end justify-end pointer-events-none overflow-hidden">
      <span
        class="text-[16rem] font-black uppercase leading-none select-none"
        style="font-family: 'Anton', sans-serif; color: #000; opacity: 0.03; transform: translateY(20%);"
        >NOW</span
      >
    </div>

    <div class="max-w-7xl mx-auto relative z-10">
      <!-- Section header -->
      <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-16">
        <div>
          <div
            class="inline-block bg-magenta text-black px-4 py-1 text-xs font-black uppercase tracking-widest mb-4 border-2 border-black"
            style="box-shadow: 3px 3px 0px 0px #000;"
          >
            THE MOVEMENT
          </div>
          <h2
            class="text-5xl md:text-7xl font-black uppercase text-black leading-[0.9]"
            style="font-family: 'Archivo Black', sans-serif; letter-spacing: 0.01em;"
          >
            Movement<br /><span class="text-magenta">In Motion</span>
          </h2>
        </div>
        <p class="text-lg font-black text-gray-700 max-w-xs border-l-4 border-magenta pl-4">
          Real people. Real progress. Watch us grow in real-time.
        </p>
      </div>

      <MovementMetrics metrics={movementMetrics} />
    </div>
  </section>

  <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       SECTION 2: FEATURED POLICIES â€” solid mint background
       â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  <section
    id="policies"
    class="relative overflow-hidden py-20 px-4 md:px-8 border-b-8 border-black"
    style="background-color: #5EFFD8;"
  >
    {/* Watermark */}
    <div
      class="absolute inset-0 flex items-center justify-start pointer-events-none overflow-hidden"
    >
      <span
        class="text-[18rem] font-black uppercase leading-none select-none"
        style="font-family: 'Anton', sans-serif; color: #000; opacity: 0.06; transform: rotate(-4deg) translateX(-5%);"
        >FIX</span
      >
    </div>

    {/* Corner accent */}
    <div
      class="absolute top-0 right-0 w-40 h-40 bg-black hidden md:block"
      style="clip-path: polygon(100% 0, 100% 100%, 0 0);"
    >
    </div>

    <div class="max-w-7xl mx-auto relative z-10">
      <!-- Section header -->
      <div class="mb-16">
        <div
          class="inline-block bg-black text-mint px-4 py-1 text-xs font-black uppercase tracking-widest mb-4 border-2 border-black"
          style="box-shadow: 3px 3px 0px 0px #000;"
        >
          WHAT WE'LL FIX
        </div>
        <h2
          class="text-5xl md:text-7xl font-black uppercase text-black leading-[0.9]"
          style="font-family: 'Archivo Black', sans-serif; letter-spacing: 0.01em;"
        >
          {hp.theftSection.heading}
        </h2>
        <p class="text-xl font-black text-black mt-4 max-w-2xl border-l-8 border-black pl-4">
          {hp.theftSection.description}
        </p>
      </div>

      <!-- Policy cards â€” clean grid, no rotation on cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          policyItems.map((item: any, index: number) => {
            const isPolicy = !!item.slug
            const imageUrl = item.image
              ? urlFor(item.image).width(600).height(400).url()
              : item.imageUrl || null
            const shadowColors = ['#000000', '#C926F2', '#000000']
            const shadowColor = shadowColors[index % 3]
            const accentColors = ['#C926F2', '#FFED00', '#5EFFD8']
            const accentColor = accentColors[index % 3]
            const title = isPolicy ? item.title : item.amount || item.title
            const description = isPolicy ? item.summary : item.description
            const category = item.category || (isPolicy ? item.pillar : 'Policy')
            const icon = item.icon || 'mdi:file-document'
            const link = isPolicy ? `/policies/${item.slug.current}` : item.link || '#'
            const linkText = isPolicy ? 'Read Full Policy' : item.linkText || 'Learn More'
            return (
              <a
                href={link}
                class="group block bg-white border-4 border-black transition-all duration-150 hover:-translate-x-1 hover:-translate-y-1"
                style={`box-shadow: 6px 6px 0px 0px ${shadowColor};`}
              >
                {imageUrl ? (
                  <img
                    src={imageUrl}
                    alt={category}
                    class="w-full h-48 object-cover border-b-4 border-black group-hover:brightness-90 transition-all"
                  />
                ) : (
                  <div
                    class="w-full h-48 border-b-4 border-black flex items-center justify-center"
                    style={`background-color: ${accentColor};`}
                  >
                    <Icon name={icon} class="w-20 h-20 text-black opacity-40" />
                  </div>
                )}
                <div class="p-6">
                  <div
                    class="inline-block px-2 py-0.5 text-xs font-black uppercase tracking-wider border-2 border-black mb-3"
                    style={`background: ${accentColor}; color: #000;`}
                  >
                    {category}
                  </div>
                  <h3
                    class="text-xl font-black mb-2 uppercase leading-tight group-hover:text-magenta transition-colors"
                    style="font-family: 'Archivo Black', sans-serif;"
                  >
                    {title}
                  </h3>
                  <p class="text-sm font-bold text-gray-700 leading-snug mb-4">{description}</p>
                  <span class="inline-flex items-center gap-2 font-black uppercase text-sm text-black border-b-2 border-black">
                    {linkText} <Icon name="mdi:arrow-right-bold" class="w-4 h-4" />
                  </span>
                </div>
              </a>
            )
          })
        }
      </div>

      <div class="mt-10">
        <a
          href="/policies"
          class="inline-flex items-center gap-3 bg-black text-white px-8 py-4 font-black uppercase text-lg border-4 border-black hover:-translate-y-1 hover:-translate-x-1 transition-all"
          style="box-shadow: 6px 6px 0px 0px #FFED00;"
        >
          <Icon name="mdi:file-document-multiple" class="w-6 h-6" />
          See All Policies
        </a>
      </div>
    </div>
  </section>

  <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       SECTION 3: ELECTORATES â€” solid black background
       â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  <section
    id="electorates"
    class="relative overflow-hidden py-20 px-4 md:px-8 border-b-8 border-mint bg-black"
  >
    {/* Watermark */}
    <div class="absolute inset-0 flex items-center justify-end pointer-events-none overflow-hidden">
      <span
        class="text-[14rem] font-black uppercase leading-none select-none"
        style="font-family: 'Anton', sans-serif; color: #fff; opacity: 0.03; transform: rotate(8deg) translateX(10%);"
        >VOTE</span
      >
    </div>

    {/* Corner accent â€” mint */}
    <div
      class="absolute bottom-0 left-0 w-48 h-48 bg-mint hidden md:block"
      style="clip-path: polygon(0 100%, 100% 100%, 0 0);"
    >
    </div>

    <div class="max-w-7xl mx-auto relative z-10">
      <!-- Section header -->
      <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-16">
        <div>
          <div
            class="inline-block bg-mint text-black px-4 py-1 text-xs font-black uppercase tracking-widest mb-4 border-2 border-mint"
            style="box-shadow: 3px 3px 0px 0px #5EFFD8;"
          >
            CANDIDATES
          </div>
          <h2
            class="text-5xl md:text-7xl font-black uppercase text-white leading-[0.9]"
            style="font-family: 'Archivo Black', sans-serif; letter-spacing: 0.01em;"
          >
            {hp.electoratesSection.heading}
          </h2>
        </div>
        <p class="text-lg font-black text-mint max-w-xs border-l-4 border-mint pl-4">
          {hp.electoratesSection.description}
        </p>
      </div>

      <!-- Electorate cards -->
      <div
        class={`grid gap-6 ${electorates.length === 1 ? 'grid-cols-1 max-w-xl' : electorates.length === 0 ? 'grid-cols-1' : 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3'}`}
      >
        {
          electorates.length === 0 ? (
            <div
              class="bg-yellow border-4 border-black p-10 text-center col-span-full max-w-2xl mx-auto"
              style="box-shadow: 8px 8px 0px 0px #5EFFD8;"
            >
              <Icon name="mdi:calendar-clock" class="w-16 h-16 mx-auto mb-4 text-black" />
              <h3 class="text-3xl font-black uppercase mb-3">Campaigns Incoming</h3>
              <p class="text-lg font-bold mb-8">
                We are currently finalising our candidates for the upcoming election. Stay tuned!
              </p>
              <a
                href="/past-candidates"
                class="inline-flex items-center gap-2 bg-black text-white px-6 py-3 font-black uppercase border-4 border-black hover:-translate-y-1 transition-transform"
                style="box-shadow: 4px 4px 0px 0px #000;"
              >
                <Icon name="mdi:archive" class="w-5 h-5" /> View Past Candidates
              </a>
            </div>
          ) : (
            electorates.map((electorate: any, index: number) => {
              const accentColors = ['#5EFFD8', '#FFED00', '#C926F2']
              const accent = accentColors[index % 3]
              return (
                <a
                  href={`/electorates/${electorate.slug.current}`}
                  class="group bg-white border-4 border-black block transition-all duration-150 hover:-translate-x-1 hover:-translate-y-1"
                  style={`box-shadow: 6px 6px 0px 0px ${accent};`}
                >
                  {electorate.candidateImage && (
                    <img
                      src={urlFor(electorate.candidateImage)
                        .width(400)
                        .height(280)
                        .fit('crop')
                        .url()}
                      alt={electorate.candidateName || electorate.name}
                      class="w-full h-52 object-cover border-b-4 border-black group-hover:brightness-90 transition-all"
                    />
                  )}
                  <div class="p-6">
                    <div
                      class="inline-block px-2 py-0.5 text-xs font-black uppercase border-2 border-black mb-3"
                      style={`background: ${accent}; color: #000;`}
                    >
                      Electorate
                    </div>
                    <h3
                      class="text-3xl font-black uppercase leading-tight mb-1"
                      style={`font-family: 'Archivo Black', sans-serif; color: ${accent === '#FFED00' ? '#000' : accent};`}
                    >
                      {electorate.name}
                    </h3>
                    {electorate.candidateName && (
                      <div class="flex items-center gap-2 mt-2 mb-4">
                        <Icon name="mdi:account" class="w-4 h-4 text-gray-500" />
                        <span class="font-black text-sm uppercase text-gray-700">
                          {electorate.candidateName}
                        </span>
                      </div>
                    )}
                    {Array.isArray(electorate.commitments) && electorate.commitments.length > 0 && (
                      <ul class="space-y-2 mb-4">
                        {electorate.commitments.slice(0, 3).map((c: any) => (
                          <li
                            class="flex items-start gap-2 text-sm font-bold border-l-4 pl-3 py-1"
                            style={`border-color: ${accent};`}
                          >
                            <span>{c.icon}</span>
                            <span>{c.title}</span>
                          </li>
                        ))}
                      </ul>
                    )}
                    <span class="inline-flex items-center gap-2 font-black uppercase text-sm border-b-2 border-black">
                      View Full Plan <Icon name="mdi:arrow-right-bold" class="w-4 h-4" />
                    </span>
                  </div>
                </a>
              )
            })
          )
        }
      </div>

      <!-- CTA -->
      <div
        class="mt-12 bg-mint border-4 border-black p-8 max-w-2xl"
        style="box-shadow: 8px 8px 0px 0px #FFED00;"
      >
        <h3 class="text-2xl font-black uppercase mb-2">
          {hp.electoratesSection.callToAction.heading}
        </h3>
        <p class="font-bold mb-6 text-gray-800">{hp.electoratesSection.callToAction.description}</p>
        <a
          href={hp.electoratesSection.callToAction.buttonLink}
          class="inline-flex items-center gap-2 bg-black text-white px-6 py-3 font-black uppercase border-4 border-black hover:-translate-y-1 transition-transform"
          style="box-shadow: 4px 4px 0px 0px #C926F2;"
        >
          <Icon name="mdi:email-fast" class="w-5 h-5" />
          {hp.electoratesSection.callToAction.buttonText}
        </a>
      </div>
    </div>
  </section>

  <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       SECTION 4: MANIFESTO â€” split black/yellow layout
       â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  <section class="relative overflow-hidden py-20 px-4 md:px-8 border-b-8 border-black bg-yellow">
    {/* Watermark */}
    <div
      class="absolute inset-0 flex items-center justify-center pointer-events-none overflow-hidden"
    >
      <span
        class="text-[18rem] font-black uppercase leading-none select-none"
        style="font-family: 'Anton', sans-serif; color: #000; opacity: 0.05; transform: rotate(-3deg);"
        >PLAN</span
      >
    </div>
    {/* Corner â€” black triangle top-left */}
    <div
      class="absolute top-0 left-0 w-40 h-40 bg-black hidden md:block"
      style="clip-path: polygon(0 0, 100% 0, 0 100%);"
    >
    </div>

    <div class="max-w-7xl mx-auto relative z-10">
      <div class="grid md:grid-cols-2 gap-12 items-start">
        <!-- Left: header -->
        <div>
          <div
            class="inline-block bg-black text-yellow px-4 py-1 text-xs font-black uppercase tracking-widest mb-4 border-2 border-black"
            style="box-shadow: 3px 3px 0px 0px #000;"
          >
            THE PLAN
          </div>
          <h2
            class="text-5xl md:text-7xl font-black uppercase text-black leading-[0.9] mb-6"
            style="font-family: 'Archivo Black', sans-serif; letter-spacing: 0.01em;"
          >
            {hp.manifestoSection.heading}
          </h2>
          <p class="text-xl font-black text-gray-900 border-l-8 border-black pl-4 mb-8">
            {hp.manifestoSection.description}
          </p>
          <div class="flex flex-wrap gap-4">
            <a
              href="/manifesto"
              class="inline-flex items-center gap-2 bg-black text-white px-6 py-3 font-black uppercase border-4 border-black hover:-translate-y-1 transition-all"
              style="box-shadow: 5px 5px 0px 0px #C926F2;"
            >
              <Icon name="mdi:book-open" class="w-5 h-5" /> Read Full Manifesto
            </a>
            <a
              href="/policies"
              class="inline-flex items-center gap-2 bg-white text-black px-6 py-3 font-black uppercase border-4 border-black hover:-translate-y-1 transition-all"
              style="box-shadow: 5px 5px 0px 0px #000;"
            >
              <Icon name="mdi:calculator" class="w-5 h-5" /> See the Costings
            </a>
          </div>
        </div>

        <!-- Right: stat cards -->
        <div class="grid grid-cols-2 gap-4">
          {
            hp.manifestoSection.stats.map((stat: any, index: number) => {
              const accentColors = ['#C926F2', '#5EFFD8', '#FFED00', '#C926F2']
              const accent = accentColors[index % 4]
              return (
                <div
                  class="bg-black border-4 border-black p-6 flex flex-col items-start"
                  style={`box-shadow: 6px 6px 0px 0px ${accent};`}
                >
                  <div class="w-full h-2 mb-4" style={`background: ${accent};`} />
                  <span
                    class="text-4xl lg:text-5xl font-black block mb-1 uppercase"
                    style={`font-family: 'Archivo Black', sans-serif; color: ${accent};`}
                  >
                    {stat.number}
                  </span>
                  <span class="text-xs font-black uppercase tracking-wide text-white">
                    {stat.label}
                  </span>
                </div>
              )
            })
          }
        </div>
      </div>
    </div>
  </section>

  <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       SECTION 5: JOIN / TAKE ACTION â€” solid magenta
       â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  <section class="relative overflow-hidden py-20 px-4 md:px-8 border-b-8 border-black bg-magenta">
    {/* Watermark */}
    <div class="absolute inset-0 flex items-center justify-end pointer-events-none overflow-hidden">
      <span
        class="text-[16rem] font-black uppercase leading-none select-none"
        style="font-family: 'Anton', sans-serif; color: #fff; opacity: 0.07; transform: rotate(5deg) translateX(15%);"
        >JOIN</span
      >
    </div>
    {/* Corner accent â€” yellow top-right */}
    <div
      class="absolute top-0 right-0 w-48 h-48 bg-yellow hidden md:block"
      style="clip-path: polygon(100% 0, 100% 100%, 0 0);"
    >
    </div>

    <div class="max-w-7xl mx-auto relative z-10">
      <div class="mb-16">
        <div
          class="inline-block bg-black text-magenta px-4 py-1 text-xs font-black uppercase tracking-widest mb-4 border-2 border-black"
          style="box-shadow: 3px 3px 0px 0px #FFED00;"
        >
          GET INVOLVED
        </div>
        <h2
          class="text-5xl md:text-7xl font-black uppercase text-white leading-[0.9]"
          style="font-family: 'Archivo Black', sans-serif; letter-spacing: 0.01em;"
        >
          {hp.joinSection.heading}
        </h2>
        <p class="text-xl font-black text-white mt-4 max-w-xl border-l-4 border-white pl-4">
          {hp.joinSection.description}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          hp.joinSection.cards.map((card: any, index: number) => {
            const bgColors = ['#FFED00', '#000000', '#5EFFD8']
            const textColors = ['#000000', '#ffffff', '#000000']
            const shadowColors = ['#000000', '#FFED00', '#000000']
            const bg = bgColors[index % 3]
            const text = textColors[index % 3]
            const shadow = shadowColors[index % 3]
            const ctaBg = bg === '#000000' ? '#FFED00' : '#000000'
            const ctaText = bg === '#000000' ? '#000000' : '#ffffff'
            return (
              <div
                class="border-4 border-black p-8 flex flex-col group hover:-translate-y-1 transition-transform"
                style={`background: ${bg}; color: ${text}; box-shadow: 6px 6px 0px 0px ${shadow};`}
              >
                {card.icon && card.icon.includes(':') && (
                  <div class="mb-4">
                    <Icon
                      name={card.icon}
                      class="w-12 h-12"
                      style={`color: ${text === '#000000' ? '#C926F2' : '#5EFFD8'};`}
                    />
                  </div>
                )}
                <h3
                  class="text-2xl font-black uppercase mb-3"
                  style={`color: ${text}; font-family: 'Archivo Black', sans-serif;`}
                >
                  {card.title}
                </h3>
                <p class="font-bold mb-6 flex-1 opacity-90">{card.description}</p>
                <a
                  href={card.buttonLink}
                  class="inline-flex items-center gap-2 px-5 py-3 font-black uppercase border-4 border-black w-fit hover:opacity-90 transition-opacity"
                  style={`background: ${ctaBg}; color: ${ctaText}; box-shadow: 4px 4px 0px 0px ${ctaText === '#000000' ? '#000' : '#fff'};`}
                >
                  <Icon name="mdi:arrow-right-circle" class="w-5 h-5" />
                  {card.buttonText}
                </a>
              </div>
            )
          })
        }
      </div>
    </div>
  </section>

  <!-- MEMBER SIGNUP -->
  <MemberSignup
    heading={hp.signupCTA?.heading}
    description={hp.signupCTA?.description}
    buttonText={hp.signupCTA?.buttonText}
    footerText={hp.signupCTA?.footerText}
  />

  <Footer />
</BaseLayout>
